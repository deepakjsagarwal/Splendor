                app:srcCompat="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adders"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/pinkTokenImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/pinktoken4" />

        <ImageView
            android:id="@+id/blueTokenImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/bluetoken4" />

        <ImageView
            android:id="@+id/greenTokenImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/greentoken4" />

        <ImageView
            android:id="@+id/redTokenImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/redtoken4" />

        <ImageView
            android:id="@+id/blackTokenImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/blacktoken4" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="done"
        app:layout_constraintBottom_toBottomOf="@id/adders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adders"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/done" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintVertical_weight="1.5">

        <TableRow
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cards"
                style = "android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pinkcards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                style = "android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/bluecards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                style = "android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/greencards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/redcards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/blackcards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/whichplayer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score"
                style = "android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tokenNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tokens"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pinktokens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/bluetokens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
