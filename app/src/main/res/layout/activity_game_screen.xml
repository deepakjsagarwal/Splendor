                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/blacktokens"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="26sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>

            <TextView
                android:id="@+id/victorypoints"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="24sp"
                style = "android:style/TextAppearance.DeviceDefault.Medium"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearlayoutforplayershowtable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@id/adders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:id="@+id/player4showtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showInfo"
            android:gravity="center"
            android:text="Player 4"
            android:textSize="12sp"
            style = "android:style/TextAppearance.DeviceDefault.Medium"/>

        <TextView
            android:id="@+id/player3showtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showInfo"
            android:gravity="center"
            android:text="Player 3"
            android:textSize="12sp"
            style = "android:style/TextAppearance.DeviceDefault.Medium"/>

        <TextView
            android:id="@+id/player2showtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="showInfo"
            android:gravity="center"
